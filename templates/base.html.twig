<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8">
		<meta name="viewport" content="width=device-width, initial-scale=1.0">
		<title>
			{% block title %}Welcome!
			{% endblock %}
		</title>
		{% block javascripts %}
			<link rel="stylesheet" href="assets/css/style.css">
		{% endblock %}
		{% block stylesheets %}
			<script src="assets/js/scripts.js" defer></script>
		{% endblock %}
	</head>
	<body>
		{% include 'sidebar.twig' %}
		<header>
			<nav>
				{% block nav_menu %}
					<!-- Your navigation menu here -->
					<ul>
						<li><a href="/">Home</a></li>
						<li><a href="/about">About</a></li>
						<li><a href="/services">Services</a></li>
						<li><a href="/contact">Contact</a></li>
					</ul>

				{% endblock %}
			</nav>

		</header>
		<div class="html_body">
			{% block content %}
				<h1>{{ site_name }}</h1>
			{% endblock content %}
		</div>

		{% block footer %}
			{% include 'footer.twig' %}
		{% endblock %}
	</body>
</html>
